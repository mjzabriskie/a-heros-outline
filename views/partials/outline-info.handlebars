<div class="card mb-3 bg-light">
  <div class="row g-0">
    <div class="col-md-5 m-auto d-none d-lg-block">
      <img
        src="./images/A-Hero's-Outline-Dashboard.jpg"
        class="img-thumbnail rounded-start"
        alt="Story Circle"
      />
    </div>
    <div class="col-md-7">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        {{#if (is_updated createdAt updatedAt)}}
          <p class="card-text"><small class="text-muted">Updated
              {{format_date updatedAt}}</small></p>
        {{else}}
          <p class="card-text"><small class="text-muted">Created
              {{format_date createdAt}}</small></p>
        {{/if}}
        <button
          class="btn btn-danger deleteOutline"
          data-id="{{id}}"
        >Delete</button>
        <button
          class="btn btn-success viewOutline"
          data-id="{{id}}"
        >View</button>
      </div>
    </div>
  </div>
</div>