<div class="card mb-3 bg-light">
  <div class="row g-0">
    <div class="col-md-5 m-auto d-none d-lg-block">
      <img
        src="./images/A-Hero's-Outline-Dashboard.jpg"
        class="img-thumbnail rounded-start"
        alt="..."
      />
    </div>
    <div class="col-md-7">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        {{!-- <p class="card-text">Brief Description of story</p> --}}
        <p class="card-text"><small class="text-muted">{{format_date
              createdAt
            }}</small></p>
        <button
          class="btn btn-danger deleteOutline"
          data-id="{{id}}"
        >Delete</button>
        <button
          class="btn btn-success viewOutline"
          data-id="{{id}}"
        >View</button>
      </div>
    </div>
  </div>
</div>