<div class="text-center">
  <h1>Outline</h1>
  <div class="row justify-content-center m-0">
    <div class="col-sm-4 mb-3">
      <input
        type="text"
        class="form-control"
        id="outline-title"
        value="{{outline.title}}"
      />
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="card mb-3">
        <div class="card-header">
          1
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="exampleFormControlTextarea3">Comfort Zone</label>
            <textarea
              class="form-control"
              id="exampleFormControlTextarea3"
              rows="5"
            >{{outline.comfort_zone}}</textarea>
          </div>
          <button id="clear-btn" class="btn btn-danger mt-1">Clear</button>
          <!-- <button id="save-btn" class="btn btn-success mt-1">Save</button> -->
        </div>
      </div>
